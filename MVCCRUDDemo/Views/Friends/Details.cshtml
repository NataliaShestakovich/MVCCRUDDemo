@model MVCCRUDDemo.Models.Domain.Friend

<h1>Edit Friend</h1>

<form method="post" action="View" class="mt-7">
 
  <div class="mb-3">
    <label for="" class="form-label">ID</label>
    <input type="text" class="form-control" asp-for="FriendID" readonly>
  </div>

  <div class="mb-3">
    <label for="" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="FriendName" required>
  </div>

  <div class="mb-3">
    <label for="" class="form-label">Place</label>
        <input type="text" class="form-control" asp-for="Place" required>
  </div>

  <button type="submit" class="btn btn-primary" >Submit</button>
  <button type="submit" class="btn btn-danger" 
  asp-action ="Delete"
  asp-controller = "Friends">Delete</button>
</form>